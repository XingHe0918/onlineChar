.loginMain{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
.loginBody{
  /* border: 1px solid black; */
  width: 80%;
  height: 400px;
}
.loginLogin{
  /* display: flex;
  justify-content: center;
  align-items: center; */
  text-align: center;
  font-family: PingFangSC, Microsoft YaHei, sans-serif;
  font-size: 20px;
  color: #333;
}
.loginHeadImage{
  display: flex;
  justify-content: center;
  align-items: center;
}
.loginHeadImage image{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-top: 20%;
}
.loginForm{
  /* border: 1px solid black; */
  padding: 40px;
}
.loginFormText{
  width: 50px;
  float: left;
  margin-top: 5px;
  font-size: 16px;
}
.loginInput{
  border: 1px solid black;
  border-radius: 4% 4% 4% 4% / 25% 25% 25% 25% ;
  height: 35px; /* 设置输入框的高度 */
  line-height: 50px; /* 设置行高，使文本在输入框中垂直居中 */
  padding: 0 10px; /* 内边距，使文本与输入框边界有一定距离 */
  box-sizing: border-box; /* 包括内边距和边框在内进行计算 */
  /* width: 50%; */
}
.loginFormItem{
  margin-bottom: 10px;
}
.loginButton{
  width: 100px;
  float: left;
  margin-left: 15px;
}