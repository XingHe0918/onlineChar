.container {
  padding: 20px;
  margin-top: 50px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
}

.content {
  height: 600px;
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 20px;
}

.section {
  margin-bottom: 15px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.section-content {
  font-size: 14px;
  line-height: 20px;
}

.accept-button {
  width: 100%;
  height: 40px;
  background-color: #4CAF50;
  color: white;
  text-align: center;
  line-height: 40px;
  border: none;
  border-radius: 5px;
}
